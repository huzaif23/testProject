<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#252525"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#252525"
    tools:context="com.example.mangotech2.a123ngo.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:paddingTop="25dp"
            android:text="@string/Reg"
            android:textColor="#0F91FC"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="-75dp"
            tools:layout_editor_absoluteY="-41dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Name"

            android:textColor="#fff"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="94dp" />

        <EditText
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/txtshape"
            android:inputType="textPersonName"
android:hint="John Doe"
            android:text=""
            android:textColor="#000"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="94dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Number"
            android:textColor="#fff"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="158dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <Spinner
        android:id="@+id/spnregcountrycode"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="@drawable/mobiledropshape"
        android:layout_height="41dp"
        android:entries="@array/country_number_arrays"
        android:prompt="@string/country_prompt" />
    <EditText
        android:id="@+id/txtnumber"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="8"
        android:background="@drawable/mobiletxtshape"
        android:inputType="number"
        android:text=""
        android:hint="3*********"
        android:textColor="#000"
        android:textSize="18dp" />

</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Email"
            android:textColor="#fff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/txtshape"
            android:inputType="textEmailAddress"
            android:text=""
            android:hint="abc@xyz.com"
            android:textColor="#000"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Password"
            android:textColor="#fff"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="293dp" />

        <EditText
            android:id="@+id/txtpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/txtshape"
            android:inputType="textPassword"
            android:text=""
            android:hint="Password"
            android:textColor="#000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="293dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btnshape"
            android:gravity="center"
            android:onClick="vercodestart"
            android:text="Submit"
            android:textColor="#EBEBEB"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="202dp" />
    </LinearLayout>

</LinearLayout>
</ScrollView>