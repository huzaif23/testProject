    <LinearLayout
        android:id="@+id/btnprofilechangeusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgperson"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/txtprofileusername"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            android:paddingTop="7dp"
            android:text="Name\n" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/editicon" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnprofilechangeemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txtprofileusermobile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="7dp"
            android:text="Mobile\n" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/editicon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/smartphone" />

        <TextView
            android:id="@+id/txtprofileemailaddress"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingTop="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Email\n" />

        <!--<ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/editicon" />
    -->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnchangepasswordfromsetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/lock" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:paddingTop="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Change Password" />


    </LinearLayout>


</LinearLayout>