<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mangotech2.a123ngo.GetFreeRides"
    tools:showIn="@layout/app_bar_get_rides">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/getfreerides"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Share 123nGo to 5 friends and get \n1 free ride" />


        <LinearLayout
            android:id="@+id/image_button_2"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#EBEBEB"
            android:background="@drawable/gradient"
            android:layout_weight="1"
            android:gravity="center">
<!--
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/uploadwhite"
                android:scaleType="fitXY"
               />
-->
            <TextView
                android:id="@+id/txtpromotion_code"
                android:layout_width="wrap_content"
                android:textColor="#EBEBEB"
                android:layout_height="wrap_content"
                android:text="Invite friends"
                android:textSize="20sp"
/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
