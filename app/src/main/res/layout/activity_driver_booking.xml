<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E3E3"
    android:orientation="vertical"
    tools:context="com.example.mangotech2.a123ngo.DriverBooking">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:translationZ="2dp"
        android:weightSum="2">

        <Button
            android:id="@+id/txtsurgefare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/final_driverbooking"


            android:text="1.0x"
            android:textColor="#EBEBEB" />

        <!--  <View
              android:id="@+id/view"
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="#000000" />
  -->

        <Button
            android:id="@+id/txtestimatedfare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/final_driverbookingprice"

            android:text="220 Pkr"
            android:textColor="#EBEBEB" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:background="#fff">


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="270dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="180dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/final_direction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="PickUp From" />


                <TextView
                    android:id="@+id/txtpickupaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="IBA UNIVERSITY"
                    android:textColor="#000"
                    android:textStyle="bold" />

            <!--    <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maskan - karachi Uni - karachi"
                    android:textColor="#464545" />
-->
                <!--
                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="7km away"
                    android:textSize="20sp" />
        -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="DROPOFF TO" />


                <TextView
                    android:id="@+id/txtdropoffaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="MODEL COLONY"
                    android:textColor="#000"
                    android:textStyle="bold" />
<!--
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SHEET26 - NEAR MASJID - KARACHI"
                    android:textColor="#464545" />
-->
            </LinearLayout>

            <TextView
                android:id="@+id/txtpaymentmethod"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cash"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>
<LinearLayout
    android:id="@+id/scheduledlayout"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="#fff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="This Ride has been Scheduled"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
    <TextView
        android:id="@+id/bookingdate"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="#000"
        android:text="date: "/>

    <TextView
        android:id="@+id/bookingtime"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#000"
        android:text="Time: "/>
    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:translationZ="2dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnaccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_now"
            android:text="Accept"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/final_tick"

            android:textColor="#EBEBEB" />

        <!--  <View
              android:id="@+id/view"
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="#000000" />
  -->

        <Button

            android:id="@+id/btnreject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_later"
            android:text="Reject"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/final_cross"
            android:textColor="#EBEBEB" />

    </LinearLayout>
    <TextView
        android:id="@+id/lblrem_sec"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="10 sec"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#f90000"
        android:layout_marginTop="8dp"/>
</LinearLayout>
</ScrollView>
</LinearLayout>
