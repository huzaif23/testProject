<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.example.mangotech2.a123ngo.DriverDocuments">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:translationZ="2dp"
        android:background="@drawable/gradient">
        <ImageView
            android:id="@+id/btndriverdocumentback"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:translationZ="5dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dp"
            android:background="@drawable/backbutton"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="-30dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:text="Add Valid Documents" />
    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:scrollbars="vertical"
    android:background="#252525">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Valid Cnic"
            android:textColor="#fff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/btncnicfront"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"

            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload (Front)"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btncnicback"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"
            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/image_button_2_text"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload (Back)"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Vehicle Papers"
            android:textColor="#fff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/btnvehiclepaper"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"

            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload           "
                android:textSize="20sp"
                />
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Letter of conscent From Owner"
            android:textColor="#fff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/btnletterofconcert"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"

            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/image_button_2_tex"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload           "
                android:textSize="20sp"
                />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Vehicle Tax Papers"
            android:textColor="#fff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/btnvehicletaxpaper"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"

            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload           "
                android:textSize="20sp"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textVew9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="Valid Driving License"
            android:textColor="#fff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/btnvaliddrivingfront"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"

            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload (Front)"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnvaliddrivingback"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="42dp"
            android:textColor="#000"
            android:background="@drawable/txtshape"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:src="@drawable/upload"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="Image Upload (Back)"
                android:textSize="20sp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnsubmitdoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btnshape"
            android:text="Submit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#0F91FC"
            android:textSize="18sp"
            android:text="For Help, Call 03123456789" />
    </LinearLayout>

        </LinearLayout>



</ScrollView>
</LinearLayout>