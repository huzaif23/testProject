<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.mangotech2.a123ngo.UsersFeedback">
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
               android:text="Ride Completed"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal"
                android:background="#f73b3b"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:text="Fare" />
                <TextView
                    android:id="@+id/passengercollectedcashfare"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:text="" />
            </LinearLayout>
<!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="#fff"
                android:layout_height="50dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtcustomername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="start|center"
                    android:text="Customer: Talha Tayyab"
                    android:textColor="#505050"
                    android:textSize="22sp" />
            </LinearLayout>
-->
            <TextView

                android:id="@+id/tvRating"
                android:textColor="#000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </TextView>
            <RatingBar
                android:backgroundTint="#fff"
                android:secondaryProgressTint="#f6ff00"
                android:progressTint="#ffea00"
                android:textColor="#fff"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="1"
                android:stepSize="1" >
            </RatingBar>
            <TextView
                android:textColor="#000"
                android:text="Feedback"
                android:layout_marginTop="15dp"
                android:id="@+id/tvFeedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:textColor="#000"
                android:background="@drawable/etborder"
                android:id="@+id/etFeedback"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_width="fill_parent"
                android:layout_height="125dip">
            </EditText>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#CCC">
        <Button
            android:id="@+id/btnratingnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textColor="#fff"
            android:background="@drawable/btn_now"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnratinglater"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_later"
            android:text="Cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>