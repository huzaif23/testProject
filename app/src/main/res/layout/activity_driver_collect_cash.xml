<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#252525"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#252525"
        android:orientation="vertical"
        tools:context="com.example.mangotech2.a123ngo.DriverCollectCash">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:orientation="horizontal"
            android:background="#f73b3b"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:text="Total Fare" />
            <TextView
                android:id="@+id/drivercollectedcashfare"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:text="0.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#fff"
            android:layout_height="50dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtcustomername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:paddingLeft="10dp"
                android:text="Customer: Talha Tayyab"
                android:textColor="#505050"
                android:textSize="22sp" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:textColor="#fff"
    android:textSize="17sp"
    android:text="FARE BREAKDOWN"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Base Fare"/>
        <TextView
            android:id="@+id/txtdrivercollectedcashbasefare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="0.0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Distance"/>
        <TextView
            android:id="@+id/txtdrivercollectedcashdistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="0.0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Time"/>
        <TextView
            android:id="@+id/txtdrivercollectedcashtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="0.0"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:background="#c6c4c4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Subtotal"/>
        <TextView
            android:id="@+id/txtdrivercollectedcashsubtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="0.0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Discount"/>
        <TextView
            android:id="@+id/txtdrivercollectedcashpromotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="-0.0"/>
    </LinearLayout>
</LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:layout_marginTop="80dp"
    android:layout_height="60dp"
    android:textSize="20sp"
    android:textColor="#fff"
    android:text="COLLECT CASH"
    android:onClick="btncollectcash"
    android:background="@drawable/final_btnnext"
    android:layout_gravity="bottom"/>
</LinearLayout>
</ScrollView>