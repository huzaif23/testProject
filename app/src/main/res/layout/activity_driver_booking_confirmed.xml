<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E3E3"
    android:orientation="vertical"
    tools:context="com.example.mangotech2.a123ngo.DriverBookingConfirmed">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="15dp"
        android:background="#fff">


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="270dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="180dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/final_direction" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="PickUp From" />


                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="IBA UNIVERSITY"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maskan - karachi Uni - karachi"
                    android:textColor="#464545" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="7km away"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:text="DROPOFF TO" />


                <TextView
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="MODEL COLONY"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SHEET26 - NEAR MASJID - KARACHI"
                    android:textColor="#464545" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Business Car"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cash"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:translationZ="2dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnonmyway"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/final_btnnext"
            android:text="Arrived For PickUp"
            android:gravity="center|center_vertical"
            android:layout_gravity="center"
            android:onClick="btnonmyway"
            android:textColor="#EBEBEB" />

    </LinearLayout>
</LinearLayout>
